# Smart Meeting Room Server Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_PATH=database.sqlite

# JWT Configuration
JWT_SECRET=smart-meeting-room-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# API Keys
ESP32_API_KEY=esp32-smart-meeting-key-2024

# CORS Configuration
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
LOG_ROTATION=false
DB_LOGGING=false

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# Business Rules Configuration
MIN_BOOKING_DURATION=30
MAX_BOOKING_DURATION=480
MAX_ADVANCE_BOOKING_DAYS=30
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=18

# Email Configuration (optional - for notifications)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@smartmeeting.com

# SMS Configuration (optional - for notifications)
SMS_ENABLED=false
SMS_API_KEY=
SMS_SENDER=SmartMeeting